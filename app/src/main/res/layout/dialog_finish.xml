<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog_finish_shape"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/txt_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:text="Finish"
        android:textColor="@color/white"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txt_total_coins_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Unfortunately, now we have not so many questions, but in the future we will fill this interesting game with many other questions."
        />

    <TextView
        android:id="@+id/txt_total_coins_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_finish"
        android:layout_marginTop="10dp"
        android:text="You have earned 200 coins"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/txt_total_coins_count"
        app:layout_constraintTop_toTopOf="@id/txt_total_coins_count"
        app:layout_constraintBottom_toBottomOf="@id/txt_total_coins_count"
        android:layout_marginStart="5dp"
        android:src="@drawable/img_coin"/>
    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="What do you want to do?"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/btn_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:background="?selectableItemBackground"
        android:text="Restart"
        android:textColor="#FF5722"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.3"
        />
    <TextView
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_restart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btn_restart"
        android:background="?selectableItemBackground"
        android:text="Home"
        android:textColor="#FF5722"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.7"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
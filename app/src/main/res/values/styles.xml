<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_variant_buttons">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:background">@drawable/bg_shape_variants</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="style_answer_buttons">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:background">@drawable/bg_shape_answers</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="style_correct_answer_buttons">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:background">@drawable/bg_shape_correct_answer</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>
</resources>